{
    "manifest_version": 2,
    "name": "URL Shortener",
    "version": "1.0",
    "description": "Shorten URLs with ease",
    "permissions": ["activeTab", "storage" , "https://api.tinyurl.com/dev/api-create.php*"],
    "browser_action": {
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  